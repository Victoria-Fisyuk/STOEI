@model TAiMStore.Model.ViewModels.MasterPageModel

@{
    ViewBag.Title = "Товары";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Ваши товары</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                        <th class="text-left">ID</th>
                        <th>Наименование</th>
                        <th class="text-center">Категория</th>
                        <th class="NumericCol">Цена</th>
                        <th class="text-center">Действие</th>
                    </tr>
                    @foreach (var item in Model.ProductsViewModel.Products)
                    {
                        <tr>
                            <td class="text-left">@item.Id</td>
                            <td class="text-left">@Html.ActionLink(item.Name, "Edit", new { item.Id })</td>
                            <td class="text-left">@item.Category.ToLower()</td>
                            <td class="NumericCol">@item.Price.ToString("c")</td>
                            <td class="text-center">
                                @using (Html.BeginForm("Delete", "Admin"))
                                {
                                    @Html.Hidden("ProductID", item.Id)
                                    <input type="submit" value="Удалить" onclick="return confirm('Вы действительно хотите удалить товар?');" class="btn btn-default btn-sm btn-danger" />
                                }
                            </td>
                        </tr>
                    }
         </table>
        @Html.ActionLink("Добавить новый товар", "Create","Admin", new { @class = "btn btn-default btn-lg" })
    </div>
</div>