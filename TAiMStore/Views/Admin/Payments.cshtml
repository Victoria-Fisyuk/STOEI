@model TAiMStore.Model.ViewModels.MasterPageModel

@{
    ViewBag.Title = "Типы оплаты";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Списки типов оплаты</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <td class="text-center">Тип оплаты</td>
                <td class="text-center">Действия</td>
</tr>
            @foreach (var payment in Model.Payments)
            {
                <tr>
                    <td title="Для редактирования нажмите на тип оплаты">@Html.ActionLink(payment.PaymentMethod, "PaymentEdit", new { paymentId = payment.Id }, FormMethod.Get)</td>
                    <td class="text-center">
                        @using (Html.BeginForm("PaymentDelete", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.Hidden("paymentId", payment.Id)
                            <input type="submit" onclick="return confirm('Вы действительно хотите удалить категорию?');" value="Удалить" class="btn btn-danger btn-sm" />
                        }
                    </td>
                </tr>
            }
        </table>
        <br />
        @Html.ActionLink("Добавить", "PaymentAdd", "Admin", new { @class = "btn btn-default btn-lg" })
    </div>
</div>
