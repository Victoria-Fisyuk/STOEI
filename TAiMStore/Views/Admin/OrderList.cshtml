@model TAiMStore.Model.ViewModels.MasterPageModel

@{
    ViewBag.Title = "Заказы";
}

@{
    var users = new List<SelectListItem>();
    foreach (var item in Model.OrdersViewModel.Orders)
    {
        var tmp = new SelectListItem();
        tmp.Value = item.UserName.ToLower();
        tmp.Text = item.UserName.ToLower();
        if (!users.Exists(c => c.Value == tmp.Value)) { users.Add(tmp); }
    }
    <div class="panel panel-default">
    <div class="panel-heading">
    <h4>Выбрать заказы пользователя:</h4>
    @using (Html.BeginForm("SortedOrderList", "Admin"))
    {
        <div class="btn-group">
            @Html.DropDownList("userName", users)
        </div>
    <div class="btn-group">
        <input type="submit" value="Выбрать" class="btn btn-info" />
    </div>
    }
    </div>
    </div>
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Список заказов</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Имя пользователя</th>
                <th>Email</th>
                <th class="NumericCol">Общая Цена</th>
                <th>Дата заказа</th>
                <th>Тип оплаты</th>
                <th>Действие</th>
            </tr>
            @foreach (var item in Model.OrdersViewModel.Orders)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.eMail</td>
                    <td>@item.TotalCost.ToString("C")</td>
                    <td>@item.CreateDate</td>
                    <td>@item.PaymentType</td>
                    <td>
                        @using (Html.BeginForm("DeleteOrder", "Admin"))
                        {
                            @Html.Hidden("orderId", item.Id)
                            <input type="submit" value="Delete" onclick="return confirm('Вы действительно хотите удалить данный заказ?');" class="btn btn-danger" />
                        }
                    </td>
                </tr>
                <td colspan="7">
                    @using (Html.BeginForm("OrderDetail", "Admin", new { orderId = item.Id }))
                    {
                        @Html.Hidden("orderId", item.Id)
                    <input type="submit" value="Подробнее ...." class="btn-sm btn-link" />
                    }
                </td>
            }
        </table>
    </div>
</div>