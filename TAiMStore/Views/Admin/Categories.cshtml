@model TAiMStore.Model.ViewModels.MasterPageModel

@{
    ViewBag.Title = "Список категорий";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Категории</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                        <td class="text-center">Наименование</td>
                        <td class="text-center">Действие</td>
                    </tr>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(category.CategoryName, "CategoryEdit", new { categoryId = category.Id }, FormMethod.Get)
                            </td>
                            <td class="text-center">
                                @using (Html.BeginForm("CategoryDelete", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.Hidden("categoryId", category.Id)
                                    <input type="submit" onclick="return confirm('Вы действительно хотите удалить категорию?');" value="Удалить" class="btn btn-danger btn-sm" />
                                }
                            </td>
                        </tr>
                    }
                </table>
                @Html.ActionLink("Добавить", "CategoryAdd", "Admin", new { @class = "btn btn-default btn-lg" })
    </div>
</div>
