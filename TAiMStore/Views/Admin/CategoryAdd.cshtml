@model TAiMStore.Model.ViewModels.MasterPageModel

@{
    ViewBag.Title = "Добавление Категории";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Добавление категории товара</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("CategoryAdd", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <td>Наименование категории</td>
                </tr>
                <tr>
                    <td class="padded">
                        @Html.TextBox("categoryName", Model.Category.CategoryName, new { @class = "form-control" })
                    </td>
                </tr>
            </table>
            <input type="submit" value="Добавить" class="btn btn-default btn-lg" />
        }
    </div>
</div>
