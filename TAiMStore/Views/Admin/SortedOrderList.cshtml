@model IEnumerable<TAiMStore.Domain.Order>

@{
    Layout = "~/Views/Shared/_LayoutForMessage.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список заказов пользователя:</h3>
        @{
            var orders = new List<SelectListItem>();
            bool userVis = false;
            foreach (var item in Model)
            {
                var tmp = new SelectListItem();
                tmp.Value = item.User.Name.ToLower();
                tmp.Text = item.User.Name.ToLower();
                if (!orders.Exists(c => c.Value == tmp.Value)) { orders.Add(tmp); }
                if (!userVis)
                {
                    @Html.Label(item.User.Name, new { @class = "btn-lg" });
                    userVis = true;
                }
            }
            using (Html.BeginForm("OrderList", "Admin"))
            {
                <input type="submit" value="вернуться" class="btn btn-block" />
            }
        }
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Имя пользователя</th>
                <th>Email</th>
                <th class="NumericCol">Общая Цена</th>
                <th>Дата заказа</th>
                <th>Тип оплаты</th>
                <th>Действие</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                        @*@HTML.ActionLink(item.Id, "Edit", "")*@
                    </td>
                    <td>@item.User.Name</td>
                    <td>@item.User.Email</td>
                    <td>@item.TotalCost.ToString("C")</td>
                    <td>@item.CreateDate</td>
                    <td>@item.Payment.NameMethod</td>
                    <td>
                        @using (Html.BeginForm("DeleteOrder", "Admin"))
                        {
                            @Html.Hidden("orderId", item.Id)
                            <input type="submit" value="Delete" onclick="return confirm('Вы действительно хотите удалить данный заказ?');" class="btn btn-danger" />
                        }
                    </td>
                </tr>
                <td colspan="7">
                @using (Html.BeginForm("OrderDetail", "Admin", new { orderId = item.Id }))
                {
                    @Html.Hidden("orderId", item.Id)
                    switch (@item.Status)
                    {
                        case true:
                            <input type="submit" value="Подробнее ...." class="btn btn-sm btn-success" />
                            break;
                        case false:
                            <input type="submit" value="Подробнее ...." class="btn btn-sm btn-warning" />
                            break;
                        default:
                            <input type="submit" value="Подробнее ...." class="btn btn-sm btn-danger" />
                            break;
                    }
                }
                </td>
            }
        </table>
    </div>
</div>
