@model TAiMStore.Model.ViewModels.MasterPageModel

@{
    ViewBag.Title = "Просмотр заказов";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>О заказе</h2>
    </div>
    <div class="panel-body">
        <table width="300" class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-left">Номер заказа</th>
                    <th class="text-left">Пользователь</th>
                    <th class="text-left">email</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th class="text-left">@Model.OrderViewModel.Id</th>
                    <th class="text-left">@Model.OrderViewModel.UserName</th>
                    <th class="text-left">@Model.OrderViewModel.eMail</th>
                </tr>
            </tbody>
        </table>
            @using (Html.BeginForm("OrderEdit", "Admin", new { orderId = @Model.OrderViewModel.Id}))
            {
                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                <td class="text-center"><input type="submit" value="Обработать" class="btn btn-success btn-sm" /></td>
            }
    </div>
    <div class="panel-heading">
        <h3>Список товаров</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
        <thead>
            <tr>
                <th class="text-center">Товар</th>
                <th class="text-center">Кол-во</th>
                <th class="text-right">Цена</th>
                <th class="text-right">Общая цена</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.CartView.Cart.Lines)
            {
                <tr>
                    <td class="text-center">@line.Product.Name</td>
                    <td class="text-center">@line.Quantity</td>
                    <td class="text-right">@line.Product.Price.ToString("#. руб ## коп")</td>
                    <td class="text-right">
                        @((line.Quantity * line.Product.Price).ToString("#. руб ## коп"))
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Итого:</td>
                <td class="text-right">
                    @Model.CartView.Cart.ComputeTotalValue().ToString("#. руб ## коп")
                </td>
            </tr>
        </tfoot>
        </table>
    </div>
</div>
@Html.ActionLink("Вернутся назад", "OrderList",null, new { @class = "btn btn-info" })