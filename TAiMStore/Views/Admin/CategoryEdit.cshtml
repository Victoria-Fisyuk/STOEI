@model TAiMStore.Model.ViewModels.MasterPageModel
@{
    ViewBag.Title = "Редактирование";
}


<h2>Редактирование @Model.Category.CategoryName</h2>

@using (Html.BeginForm("CategoryEdit", "Admin", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <table>
        <tr>
            <td>Наименование категории</td>
        </tr>
        <tr>
            <td class="padded">
                @Html.Hidden("categoryId", Model.Category.Id)
                @Html.TextBox("categoryName", Model.Category.CategoryName)
            </td>
        </tr>
    </table>
    <input type="submit" value="Сохранить" class="button blue"/>
}
