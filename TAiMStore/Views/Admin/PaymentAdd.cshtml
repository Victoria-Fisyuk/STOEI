@model TAiMStore.Model.ViewModels.MasterPageModel

@{
    ViewBag.Title = "Добавление тип оплаты";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Добавление типа оплаты</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("PaymentAdd", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <table>
                <tr>
                    <td>Наименование</td>
                </tr>
                <tr>
                    <td class="padded">
                        @Html.TextBox("paymentName", Model.Payment.PaymentMethod, new { @class="form-control"})
                    </td>
                </tr>
            </table>
            <input type="submit" value="Добавить" class="btn  btn-default btn-lg" />
        }
       </div>
</div>
